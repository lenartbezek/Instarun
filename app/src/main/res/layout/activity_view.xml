<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="emp.fri.si.instarun.ViewActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="64dp">

            <TextView
                android:text="Title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="14dp"
                android:textStyle="bold"
                android:textAlignment="center" android:textSize="28sp"
                android:id="@+id/titleLabel"
                android:layout_weight="1"
                android:background="@color/colorPrimary" android:textColor="?android:attr/colorBackground" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="235dp">

            <fragment
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:id="@+id/mapFragment"
                android:layout_weight="0.58" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="0.11">

            <TextView
                android:text="Distance"
                android:textAlignment="center"
                android:textSize="12sp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/distanceLabel"
                android:layout_weight="1" />

            <TextView
                android:text="Steps"
                android:textAlignment="center"
                android:textSize="12sp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stepsLabel"
                android:layout_weight="1" />

            <TextView
                android:text="Time"
                android:textAlignment="center"
                android:textSize="12sp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/timeLabel"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="61dp">

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/distanceTextView"
                android:layout_weight="1"
                android:padding="14dp"
                android:textStyle="bold"
                android:textAlignment="center" android:textSize="28sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stepsTextView"
                android:layout_weight="1"
                android:padding="14dp"
                android:textStyle="bold"
                android:textAlignment="center" android:textSize="28sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
            />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/timeTextView"
                android:layout_weight="1"
                android:padding="14dp"
                android:textStyle="bold"
                android:textAlignment="center" android:textSize="28sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        </LinearLayout>

        <com.jjoe64.graphview.GraphView
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:id="@+id/graph"
            android:layout_weight="0.32" />

    </LinearLayout>
</RelativeLayout>
